@model ForegetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h2 class="alert alert-info">Reset Password</h2>
<hr />

<form asp-controller="Account"
      asp-action="ForgetPassword">
    <div class="text-danger"
         asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Email Link</button>
    </div>
</form>


@section Scripts
    {
    @{

        await Html.RenderPartialAsync("_JqueryValidation");
    }
}
