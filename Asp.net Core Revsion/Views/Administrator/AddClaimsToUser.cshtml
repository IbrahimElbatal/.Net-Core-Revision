@model UserClaimsViewModel
@{
    ViewData["Title"] = "AddClaimsToUser";
}

<h2 class="alert alert-info">User Claims</h2>
<hr />
<form asp-controller="Administrator"
      asp-action="AddClaimsToUser"
      asp-route-userId="userId">
    <div class="text-danger"
         asp-validation-summary="ModelOnly"></div>

    <div class="card bg-light mt-3">
        <div class="card-header">Add Or Remove Claims from This User</div>
        <div class="card-body">
            <h5 class="card-title">
                <input type="hidden" asp-for="UserId" />
                @for (int i = 0; i < Model.UserClaims.Count(); i++)
                {
                    <input type="hidden" asp-for="@Model.UserClaims[i].ClaimType" />
                    <div class="form-check">
                        <input asp-for="@Model.UserClaims[i].IsSelected" class="form-check-input">
                        <label asp-for="@Model.UserClaims[i].IsSelected" class="form-check-label">
                            @Model.UserClaims[i].ClaimType
                        </label>
                    </div>
                }
            </h5>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-info"
               asp-controller="Administrator"
               asp-action="EditUser"
               asp-route-userId="@Model.UserId">Cancel</a>
        </div>
    </div>
</form>




