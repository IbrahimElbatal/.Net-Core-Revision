@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}

<h2 class="alert alert-info">CreateRole</h2>
<hr />

<form asp-controller="Administrator"
      asp-action="CreateRole">
    <div class="text-danger"
         asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <button class="btn btn-primary">CreateRole</button>
    </div>
</form>

