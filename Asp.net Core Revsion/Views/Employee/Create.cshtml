@model EmployeeViewModel
@{
    ViewData["Title"] = "Create";
}

<h2 class="alert alert-info">New Employee</h2>
<hr />

<form asp-action="Create"
      asp-controller="Employee"
      enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Employee.Email"></label>
        <input asp-for="Employee.Email" class="form-control" />
        <span asp-validation-for="Employee.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employee.DepartmentId"></label>
        <select class="form-control" asp-for="Employee.DepartmentId" asp-items="ViewBag.Departments as SelectList">
            <option>Select Department</option>
        </select>
        <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FormImage"></label>
        <input asp-for="FormImage" class="form-control" />
        <span asp-validation-for="FormImage" class="text-danger"></span>
    </div>


    <button class="btn btn-primary" type="submit">Create</button>

</form>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_JqueryValidation");
    }
}
