@addTagHelper *,Extend
@model Extend.Models.ProductViewModel

@foreach (var product in Model.Products)
{

    <div class="card m-1 p-1">
        <h4 class="card-title">
            @product.Name
            <span class="badge badge-pill badge-info float-right">
                @product.Price.ToString("C2")
            </span>
        </h4>
        <form id="@product.Id"
              method="post"
              asp-controller="Cart"
              asp-action="AddToCart"
              asp-route-productId="@product.Id">
            <div class="card-text">
                <button class="btn btn-success float-right" type="submit">AddToCart</button>
            </div>
        </form>

    </div>
}

<div class="btn-group m-3"
     page-class-enabled="true"
     page-class="btn"
     page-class-selected="btn-primary"
     page-class-normal="btn-secondary"
     page-model="@Model.PageInfo"
     page-url-category="@Model.CurrentCategory"
     page-action="Index"></div>